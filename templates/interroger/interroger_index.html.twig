{% extends 'base.html.twig' %}

{% block title %}Gestion d'interroger{% endblock %}

{% block content %}
{% for message in app.flashes('success') %}
<div class="alert alert-success">
    {{ message }}
</div>
{% endfor %}

<div class="py-3" id="3">
    <a href="{{ path('app_interroger_new') }}" class="btn btn-success mt-3">Nouvelle question</a>

</div>

<div class="jumbotron text-center py-3">
    <h1>Gestion d'interroger</h1>
</div>
</br>
    
<div class="py-3">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Intitule</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>           
        </thead>
        <tbody>
        {% for interroger in interrogers %}
            <tr>
                <td>{{ interroger.intitule }}</td>
                <td>
                    <a href="{{ path('app_interroger_show', {'id': interroger.id}) }}" class="btn btn-dark mt-3">Voir</a>
                </td>
                <td>
                    <a href="{{ path('app_interroger_edit', {'id': interroger.id}) }}" class="btn btn-warning mt-3">Modifier</a>
                </td>
                <td>
                    {{ include('interroger/_delete_form.html.twig') }}


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas d'enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
    
{% endblock %}
